<%- include("header")-%>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="/css/navbar.css">
        <link rel="stylesheet" href="/css/admin.css">
        <script src="/js/navbar.js" defer></script>
        <script src="/js/admin.js" defer></script>
    </head>

    <body>
        <%-include("navbar-component")-%>

            <div class="detailsModal-wrapper inactive">
                <div class="detailsModal">
                    <span class="exitModal">&times;</span>
                    <div class="modalTitle"><span class="name-user"></span></div>
                    <div><span class="class-type"></span></div>
                    <div class="modalDepartment"><span class="department-user"></span></div>
                    <div class="table-wrapper">
                        <div class="tableUser-wrapper">
                        <table class="modalTable tableUser">
                            <tr>
                                <th>Document Titles</th>
                                <th>Access Status</th>
                                <th>Department</th> <!--added department-->
                            </tr>
                            <tr class="add">
                                <td>
                                    <select name="doc4user" id="doc4user" class="doc4user">
                                        <%for(let i=0;i< docs.docs.length;i++){%>
                                            <option value="<%=docs.docs[i].name%>"><%=docs.docs[i].name%></option>
                                        <%}%>
                                    </select>
                                </td>
                                <td>
                                    <select name="accessUser" id="accessUser">
                                        <option value="viewer">Viewer</option>
                                        <option value="editor">Editor</option>
                                        <option value="approver">Approver</option>
                                    </select>
                                </td>
                                <td>&nbsp;</td>
                            </tr>
                        </table>
                            <button class="addRowDoc">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                  </svg>

                                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-circle inactive" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
                                  </svg>
                            </button>
                        </div>
                        <table class="modalTable tableDoc inactive">
                            <tr>
                                <th>Username</th>
                                <th>Access Status</th>
                            </tr>
                            <tr class="data">
                                <td>Mark</td>
                                <td>Viewer</td>
                            </tr>
                            <tr class="data">
                                <td>Mark</td>
                                <td>Viewer</td>
                            </tr>
                            <tr class="data">
                                <td>Mark</td>
                                <td>Viewer</td>
                            </tr>
                            <tr class="data">
                                <td>Mark</td>
                                <td>Viewer</td>
                            </tr>
                            <tr class="data">
                                <td>Mark</td>
                                <td>Viewer</td>
                            </tr>
                            <tr class="data">
                                <td>Mark</td>
                                <td>Viewer</td>
                            </tr>
                            <tr class="data">
                                <td>Mark</td>
                                <td>Viewer</td>
                            </tr>
                        </table>
                    </div>
                    <div class="modalButtons">
                        <button class="modal-deleteButton modalButton">Delete Account</button>
                        <div class="accessButtons">
                            <button class="modal-changeButton modalButton" disabled>Change Access</button>
                            <button class="modal-revokeButton modalButton" disabled>Revoke Access</button>
                            <button class="modal-grantButton modalButton addDoc">Grant Access</button>
                        </div>
                    </div>
                </div>
            </div>



            <div class="main-cont">
                <div class="viewsTabs">
                    <span>Privileged Access Management: </span>
                    <span class="viewsMode inactive">Manage People</span>
                    <span class="viewsMode">Manage Documents</span>
                </div>
                <div class="userList">
                    <div class="userList-header">
                        List of Users
                    </div>
                    <input type="search" name="usersList" id="searchUserList" class="searchUserList"
                        placeholder="Search Username...">
                    <table class="usersList" id="userList">
                        <tr>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Documents</th>
                        </tr>
                    </table>



                    <table class="usersList inactive" id="documentList">
                        <tr>
                            <th>Document title</th>
                            <th>Document Classification Type</th>
                            <th>Number of Approvers</th>
                            <th>Number of Users</th>
                        </tr>
                    </table>
                </div>
            </div>
            </div>
    </body>

    </html>