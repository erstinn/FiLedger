<%-include("header")-%>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/css/dashboard-style.css">
<link rel="stylesheet" href="/css/navbar.css">
<script src="/js/dashboard.js" defer></script>
<script src="/js/navbar.js" defer></script>

</head>
<body>
<%-include("navbar-component")-%>
<div class="addDocs">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
        </svg>
</div>

<div class="tooltip">
    <div class="body">Click to Upload a File</div>
    <div class="point"></div>
</div>


<div class="main-cont">
    <div class="status-cont">
        <a href="/dashboard/accepted-docs">
            <div class="statuses accepted">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                    <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
                </svg>
                <span class="status-box">Accepted</span>
            </div>
        </a>
        <a href="/dashboard/rejected-docs">
            <div class="statuses rejected">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
                </svg>
                <span class="status-box">Rejected</span>
            </div>
        </a>
        <a href="/dashboard/pending-docs">
            <div class="statuses pending">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-hourglass" viewBox="0 0 16 16">
                    <path d="M2 1.5a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-1v1a4.5 4.5 0 0 1-2.557 4.06c-.29.139-.443.377-.443.59v.7c0 .213.154.451.443.59A4.5 4.5 0 0 1 12.5 13v1h1a.5.5 0 0 1 0 1h-11a.5.5 0 1 1 0-1h1v-1a4.5 4.5 0 0 1 2.557-4.06c.29-.139.443-.377.443-.59v-.7c0-.213-.154-.451-.443-.59A4.5 4.5 0 0 1 3.5 3V2h-1a.5.5 0 0 1-.5-.5zm2.5.5v1a3.5 3.5 0 0 0 1.989 3.158c.533.256 1.011.791 1.011 1.491v.702c0 .7-.478 1.235-1.011 1.491A3.5 3.5 0 0 0 4.5 13v1h7v-1a3.5 3.5 0 0 0-1.989-3.158C8.978 9.586 8.5 9.052 8.5 8.351v-.702c0-.7.478-1.235 1.011-1.491A3.5 3.5 0 0 0 11.5 3V2h-7z"/>
                </svg>
                <span class="status-box">Pending</span>
            </div>
        </a>
    </div>
</div>

<div id="myModal" class="modal">

    <div class="modal-content">
        <form id="uploadDoc" enctype="multipart/form-data" action="/dashboard/upload" method="POST">
            <span class="close">&times;</span>
            <div class="reject-title">
                <p>Choose a file</p>
            </div>

            <div>
                <p>Upload a file from your computer</p>
            </div>

            <div class="inputs-container">
                <label for="addFile" class="upload">
                    <input type="file" name="uploadDoc" id="addFile">
                </label>

                <div class="tags">
                    <ul class="tag-list" name="taglist">
                    </ul>
                    <input type="text" name="" id="" placeholder='Add tags seperated by ","' class="tag-input">
                </div>
            </div>

            <input type="text" name="tags" id="tagsValue" style="display:none;">
            <div class="button-container">
                <button onclick="this.form.submit()">Upload Selected File</button>
                <select name="docType" id="docType" class="docType">
                    <option value="" selected hidden disabled>Choose Classification Type</option>
                    <option value="standard">Standard</option>
                    <option value="confidential">Confidential</option>
                    <option value="internal-only">Internal-only</option>
                    <option value="restricted">Restricted</option>
                </select>
            </div>

           
        </form>

    </div>

</div>



