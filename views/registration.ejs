<%- include("header")-%>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,700;0,900;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/reg-style.css">
    <script src="/js/login.js" defer></script>
</head>
<body>
    <a href="/dashboard" class="back-button gelatine"><span class="back-svg">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
          </svg>
    </span></a>
<div class="container">
    <div class="poster">
        
    </div>
    <div class="sign-up">
        <h1>Create Account</h1>
        <div class="form">
            <form method ="POST" action="/registration/status">
                <div class="fields">
                    <input type="text" name="lastname" placeholder="Last Name" autocomplete="off">
                    <input type="text" name="firstname" placeholder="First Name" autocomplete="off">
<!--                    <input type="text" name="username" placeholder="Username" autocomplete="off">-->
                    <input type="email" name="email" placeholder="Email" autocomplete="off" required>
                   <input type="password" name="password" placeholder="Password">
                    <select name="dept" class="dropdown">
                        <div class="drpdwn-choices">
                            <option class="choice-val" value="" disabled selected>Choose Department</option>
                            <% for(let i =0; i<=dep.length; i++){%>
                                <option class="choice-val" ><%= dep[i] %></option>
                            <%}%>
                        </div>
                    </select>
                    <label for="admin">Admin?</label>
                    <input type="checkbox" id="admin" name="isAdmin" ><br><br>
                    <label for="add_doc">Can add documents?</label>
                    <input type="checkbox" id="add-doc" name="add_doc" ><br><br>
                    <label for="def_approver">Default approver for department?</label>
                    <input type="checkbox" id="def_approver" name="def_approver" ><br>
                    <button type="submit">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>